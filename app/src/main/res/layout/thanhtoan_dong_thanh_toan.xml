<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_selecter">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/textview14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvTenPhongTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên phòng"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvThangTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Tháng"
            android:textSize="16sp"
            android:textColor="#48528E" />

        <TextView
            android:id="@+id/tvTinhTrangTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Tình trạng thanh toán"
            android:paddingHorizontal="8dp"
            android:gravity="right"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D9534F" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/textview8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện: " />

        <TextView
            android:id="@+id/tvDienNuoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="điện nước" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền dịch vụ: "
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/tvDichVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dv"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: " />

        <TextView
            android:id="@+id/tvTongTienTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:textStyle="bold"
            android:textColor="#D9534F"
            android:textSize="20dp"/>
    </TableRow>

</LinearLayout>