<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_selecter">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/textview14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvTenPhongDN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên phòng"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvThangDN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Tháng"
            android:textSize="16sp"
            android:textColor="#337AB7" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/textview8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện: " />

        <TextView
            android:id="@+id/tvSoDien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="số điện" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số nước: "
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/tvSoNuoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="số nước"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D9534F"
            android:text="số nước"
            />
    </TableRow>

</LinearLayout>